<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="stacko.QuestionActivity"
    tools:showIn="@layout/activity_question">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
 <android.support.v7.widget.CardView
     android:layout_margin="5dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_margin="10dp"
        android:id="@+id/title_content_question"
        android:textSize="20sp"
        android:textColor="@color/title_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <thereisnospon.codeview.CodeView
        android:id="@+id/questionBody_codeView_content_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </thereisnospon.codeview.CodeView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/tags_recyclerView_content_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
 </android.support.v7.widget.CardView>
    </LinearLayout>
        <TextView
            android:text="ANSWERS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp" />
  <android.support.v7.widget.RecyclerView
      android:nestedScrollingEnabled="true"
      android:id="@+id/answerList_recyclerView_content_question"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
  </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</ScrollView>
